<!DOCTYPE html>

<html class="no-js">
  <head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Resource Wall</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,600,400italic,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>

  <!-- Animate.css -->
  <link rel="stylesheet" href="/css/animate.css">
  <!-- Icomoon Icon Fonts-->
  <link rel="stylesheet" href="/css/icomoon.css">
  <!-- Bootstrap  -->
  <link rel="stylesheet" href="/css/bootstrap.css">
  <!-- Owl Carousel -->
  <link rel="stylesheet" href="/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/css/owl.theme.default.min.css">
  <!-- Theme style  -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Modernizr JS -->
  <script src="/scripts/modernizr-2.6.2.min.js"></script>
  <!-- FOR IE9 below -->
  <!--[if lt IE 9]>
  <script src="scripts/respond.min.js"></script>
  <![endif]-->

  </head>

  <body>
  <div id="fh5co-page">
    <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
    <aside id="fh5co-aside" role="complementary" class="border js-fullheight">

      <h1 id="fh5co-logo"><img src="/images/logo.png"</a></h1>
      <nav id="fh5co-main-menu" role="navigation">
        <ul>
          <li><a href="/resources">Home Page</a></li>
          <li><a href="/resources/new">new!</a></li>
          <li><a href="/users/<%=user_id%>/profile">My Profile</a></li>
          <li>
            <form method="POST" id="logoutbtn" action="/users/logout">
              <input type="submit" class="logoutbtn" name="logout" value="LOGOUT">
            </form>
          </li>
        </ul>
      </nav>

      <div class="fh5co-footer">
        <small>
          <span>&copy; 2017 Made by Chandra & Jimmy & Thomas</span>
          <span>Designed by <a href="http://freehtml5.co/" target="_blank">FreeHTML5.co</a> </span>
        </small>
      </div>

    </aside>

    <div id="fh5co-main">
      <div class="fh5co-narrow-content">
      <div class="input-group">
        <form method = "GET" action="/resources/search" >
          <input type="text" class="form-control" name="search" placeholder="Search resources!">
        </form>
      </div>
      <br>
      <h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">Search Results</h2>
      <div class="row animate-box" data-animate-effect="fadeInLeft">
        <% for(let resource of resources) { %>
            <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 work-item">
              <a href="/resources/<%= resource.resource_id %>">
                <h3 class="fh5co-work-title"><%= resource.title %></h3>
                <p><%= resource.description %></p>
                <% for (let tag of resource.tags){ %>
                  <label class="label label-primary"><%= tag.tag_name %></label>
                <% } %>
              </a>
            </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- jQuery -->
  <script src="/scripts/jquery.min.js"></script>
  <!-- jQuery Easing -->
  <script src="/scripts/jquery.easing.1.3.js"></script>
  <!-- Bootstrap -->
  <script src="/scripts/bootstrap.min.js"></script>
  <!-- Carousel -->
  <script src="/scripts/owl.carousel.min.js"></script>
  <!-- Stellar -->
  <script src="/scripts/jquery.stellar.min.js"></script>
  <!-- Waypoints -->
  <script src="/scripts/jquery.waypoints.min.js"></script>
  <!-- Counters -->
  <script src="/scripts/jquery.countTo.js"></script>



  <!-- MAIN JS -->
  <script src="/scripts/main.js"></script>

  </body>
</html>
